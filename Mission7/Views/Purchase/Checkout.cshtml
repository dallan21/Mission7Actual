@model Purchase
@{
}


<h2>Check out now</h2>

<p>Thank you for purchasing a book! Please enter your details below to finish checking out!</p>

<form method="post" asp-action="Checkout">
    <h4>Ship to</h4>

    <div class="form-group">
        <label asp-for="name">Name:</label>
        <input asp-for="name" class="form-control" />

    </div>

    <h4>Address</h4>

    <div class="form-group">
        <label asp-for="addressLine1">Address Line 1:</label>
        <input asp-for="addressLine1" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="addressLine2">Address Line 2:</label>
        <input asp-for="addressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="for-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Zipcode">ZipCode:</label>
        <input asp-for="Zipcode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Purchase" />

    </div>

</form>